{
	"name": "javascript-development-environment",
	"version": "1.0.0",
	"description": "Adapted from Pluralsight course by Cory House",
	"scripts": {
		"prestart": "node ./buildscripts/start-message.js",
		"start": "npm-run-all --parallel src:start lint:watch test:watch start-mock-api",
		"src:start": "node -r esm ./buildscripts/src-server.js",
		"lint": "esw webpack.config.dev.* src buildscripts --color",
		"lint:watch": "npm run lint -- --watch",
		"test": "mocha --reporter progress buildscripts/testSetup.js \"src/**/*.test.js\"",
		"test:watch": "npm run test -- --watch",
		"generate-mock-data": "node -r esm buildscripts/generate-mock-data.js",
		"prestart-mock-api": "npm run generate-mock-data",
		"start-mock-api": "json-server --watch src/api/db.json --port 9001"
	},
	"author": "Ady Ngom",
	"license": "MIT",
	"dependencies": {
		"esm": "^3.2.25",
		"inline-source-map": "^0.6.2",
		"whatwg-fetch": "1.0.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.1",
		"@babel/core": "^7.8.0",
		"@babel/preset-env": "^7.8.0",
		"@babel/preset-es2015": "^7.0.0-beta.53",
		"@babel/register": "^7.8.0",
		"babel-loader": "^8.0.6",
		"babel-node": "0.0.1-security",
		"babel-preset-latest": "^6.24.1",
		"chai": "^4.2.0",
		"chalk": "^4.1.0",
		"cheerio": "^1.0.0-rc.3",
		"compression": "^1.7.4",
		"cross-env": "^7.0.2",
		"css-loader": "^3.5.3",
		"eslint": "^7.2.0",
		"eslint-import-resolver-webpack": "^0.12.1",
		"eslint-plugin-import": "^2.21.2",
		"eslint-watch": "^7.0.0",
		"express": "^4.17.1",
		"extract-text-webpack-plugin": "^3.0.2",
		"file-loader": "^6.0.0",
		"html-loader": "^1.1.0",
		"html-webpack-plugin": "^3.2.0",
		"jsdom": "^16.2.2",
		"json-schema-faker": "^0.5.0-rcv.24",
		"json-server": "^0.16.1",
		"localtunnel": "^2.0.0",
		"mocha": "^8.0.1",
		"nock": "^12.0.3",
		"npm-run-all": "^4.1.5",
		"numeral": "^2.0.6",
		"open": "^7.0.4",
		"rimraf": "^3.0.2",
		"style-loader": "^1.2.1",
		"uglifyjs-webpack-plugin": "^2.2.0",
		"webpack": "^4.41.5",
		"webpack-cli": "^3.3.10",
		"webpack-dev-middleware": "^3.7.2",
		"webpack-hot-middleware": "^2.25.0",
		"webpack-md5-hash": "0.0.6"
	}
}
